<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:administrationapp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="administrationapp.Views.StockPageView"
             x:DataType="vm:StockPageViewModel">
  <StackPanel>
    <Button Command="{Binding LoadDataCommand}" Content="Cargar Datos del Excel" />
    <ListBox ItemsSource="{Binding ExcelData}"> 
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Border
            Margin="0,10,0,0"
            CornerRadius="5"
            BorderBrush="Gray" BorderThickness="1"
            Padding="5">
            <StackPanel Orientation="Vertical">
              <TextBlock Text="{Binding Codigo}"/>
              <TextBlock Text="{Binding Nombre}"/>
              <TextBlock Text="{Binding Cantidad}" Margin="50 0 0 0"/>
              <TextBlock Margin="0 0" FontWeight="Bold" 
                         Text="3"/>
            </StackPanel>
          </Border>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</UserControl>
